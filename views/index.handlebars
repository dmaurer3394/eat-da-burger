<div class="container text-center">
    <h1>Burgers</h1>
    <img id="burger-image" src="/assets/img/burger.png">
</div>

<br>
<br>

<div class="container text-center">
    <div class="row">
        <div class="col-sm-6">
            <h2>Burgers that are not eaten</h2>
            <hr>
            <p>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </p>
        </div>

        <div class="col-sm-6">
            <h2>Burgers that are eaten</h2>
            <hr>
            <p>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </p>
        </div>
    </div>
</div>

<br>
<br>

<div class="container text-center">
    <h2>Add a Burger</h2>
    <hr>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
        </div>

        <button class="btn btn-dark" type="submit">Add Burger</button>
    </form>
</div>